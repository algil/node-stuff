extends ../layouts/main.layout.pug

block styles
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/product.css")

block content
  form.product-form(action="/admin/product", method="POST")
    input(type="hidden", name="productId", value=product.id)
    .form-control
      label(for="title") Title
      input#title(name="title", value=product.title)
    .form-control
      label(for="imageUrl") Image URL
      input#imageUrl(name="imageUrl", value=product.imageUrl)
    .form-control
      label(for="price") Price
      input#price(name="price", type="number", step="0.01", value=product.price)
    .form-control
      label(for="description") Description
      textarea#description(name="description", rows="3")= product.description
    
    button.btn Save