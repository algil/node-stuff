extends ../layouts/main.layout.pug

block styles
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/product.css")

block content
  h2 Cart
  if cartProducts.length > 0
    ul
      each cartProduct in cartProducts
        li
          p #{cartProduct.product.title} (#{cartProduct.quantity})
          form(action="/delete-cart-product", method="POST")
            input(type="hidden", name="productId", value=cartProduct.product.id)
            button Delete
  else
    h3 There are no products in the cart!